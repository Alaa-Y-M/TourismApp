@model PagingList<GradProj.Models.City>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}

    <div class="container mt-5">
        <div class="text-center mb-3" style="background-color:lightgray">
            <h2 class="lead p-3">Cities Table</h2>
        </div>
        <p>
            <a asp-action="Create" class="btn btn-outline-primary mb-3">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-success mr-3" title="Edit"><i class="fa fa-edit fa-2x"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-warning mr-3 ml-3" title="Details"><i class="fa fa-info fa-2x"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-3"><i class="fa fa-remove fa-2x" title="Remove"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3 mb-3">
            <vc:pager paging-list="Model" />
        </div>
        <div class="mb-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info">Go Home</a>
        </div>
        <div class="mt-2">
            <a asp-action="home" asp-controller="admin" class="btn btn-outline-warning">Go To Admin Panel</a>
        </div>
    </div>
