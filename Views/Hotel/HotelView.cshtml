@model ReflectionIT.Mvc.Paging.PagingList<GradProj.Models.Hotel>
@{
    ViewData["Title"] = "Hotels";
}

    <div class="hero-wrap js-fullheight" style="background-image:url('../LayoutResources/images/cover-img-4.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
                <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                    <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Hotel</span></p>
                    <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Hotels</h1>
                </div>
            </div>
        </div>
    </div>
<section class="ftco-section justify-content-end ftco-search" style="margin-top: -122px;text-align: center;">
    <div class="container-wrap ml-auto">
        <div class="row no-gutters">
            <div class="col-md-12 tab-wrap">

                <div class="tab-content p-4 px-5" style="background:#333;opacity: 0.5;" id="v-pills-tabContent">

                    <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-nextgen-tab">
                        <div class="text-center">
                            <h4 class="lead" style="margin-bottom: 5px; color: #949494">Our Hotels</h4>
                            <h2 style="color:#FFF;margin-bottom:-9px">Choose Your Hotel</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@{
    string mssg = GradProj.Controllers.HotelController.Success;

    if (!string.IsNullOrEmpty(mssg))
    {
        <div class="alert alert-success alert-dismissible fade show mt-1 mb-1" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <strong>@mssg</strong>
        </div>
    }
}
<section class="ftco-section">
    <div class="container" style="margin-top:-30px;margin-bottom:-100px">
        <div class="row">
            <div class="col-lg-3 sidebar order-md-last ftco-animate">
                <div class="sidebar-wrap ftco-animate">
                    <h3 class="heading mb-4">Find City</h3>
                    <form asp-action="search" asp-controller="hotel">
                        <div class="fields">
                            <div class="form-group">
                                <input type="text" name="city" class="form-control" placeholder="Hotel, City">
                            </div>
                            <div class="form-group">
                                <input type="submit" class="form-control btn btn-primary py-3 px-5" value="Search" />
                            </div>
                        </div>
                    </form>
                </div>

            </div><!-- END-->

            <div class="col-lg-9">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                            <div class="destination">
                                <a asp-action="Discover" asp-controller="hotel" asp-route-id="@item.Id" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: url('../uploads/hotel/@item.ImgUrl')">
                                    <div class="icon d-flex justify-content-center align-items-center">
                                        <span class="icon-link"></span>
                                    </div>
                                </a>
                                <div class="text p-3">
                                    <div class="d-flex">
                                        <div class="one">
                                            <h3><a href="#">@item.Name</a></h3>
                                            <p class="rate">
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star-o"></i>
                                                <span>8 Rating</span>
                                            </p>
                                        </div>
                                        <div class="two">
                                            <span class="price"></span>
                                        </div>
                                    </div>
                                    <p>@item.Details</p>
                                    <p class="days"><span>2 days 3 nights</span></p>
                                    <hr>
                                    <p class="bottom-area d-flex">
                                        <span><i class="icon-map-o"></i> @item.City.Name, Eg</span>
                                        <span class="ml-auto"><a asp-action="Discover" asp-controller="hotel" asp-route-id="@item.Id">Discover</a></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row mt-5">
                    <div class="col text-center mb-5 m-auto">
                        <vc:pager paging-list="@Model" />
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section>
