@model ReflectionIT.Mvc.Paging.PagingList<GradProj.Models.SiteModels.Booking>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="text-center mb-3" style="background-color:lightgray">
        <h2 class="lead p-3">Booking Table</h2>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-outline-primary mb-5">Create New</a>
    </p>
    <table class="table table-responsive table-bordered table-sm">
        <thead>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Email
                </th>
                <th>Checked In</th>
                <th>
                    Checked Out
                </th>
                <th>Hotel</th>
                <th>Room Number</th>
                <th>Guest</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckOut)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Room.Hotel.Name)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Room.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.People)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-success mr-1" title="Edit"><i class="fa fa-edit fa-1x"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-warning mr-1 ml-1" title="Details"><i class="fa fa-info fa-1x"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1"><i class="fa fa-remove fa-1x" title="Remove"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="mt-3 mb-4">
        <vc:pager paging-list="Model" />
    </div>
    <div class="mt-2">
        <a asp-action="home" asp-controller="admin" class="btn btn-outline-warning">Go To Admin Panel</a>
    </div>
</div>