@model ReflectionIT.Mvc.Paging.PagingList<GradProj.Models.SiteModels.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}

    <div class="container mt-4">
        <div class="text-center mb-3" style="background-color:lightgray">
            <h2 class="lead p-3">Rooms Table</h2>
        </div>
        <p>
            <a asp-action="Create" class="btn btn-outline-primary mb-5">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Room Number
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsBusy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        Number Of Beds
                    </th>
                    <th>
                        Image
                    </th>
                    <th>Hotel</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsBusy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)$
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfBeds)
                        </td>
                        <td>
                            @if (item.ImgUrl != null)
                            {
                                <img src="~/uploads/room/@item.ImgUrl" class="img-thumbnail" style="width:45px" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Hotel.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-success mr-3" title="Edit"><i class="fa fa-edit fa-2x"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-warning mr-3 ml-3" title="Details"><i class="fa fa-info fa-2x"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-3"><i class="fa fa-remove fa-2x" title="Remove"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3 mb-4">
            <vc:pager paging-list="Model" />
        </div>
        <div class="mt-2">
            <a asp-action="home" asp-controller="admin" class="btn btn-outline-warning">Go To Admin Panel</a>
        </div>
    </div>