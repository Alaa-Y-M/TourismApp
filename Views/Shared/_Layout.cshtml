    <style>
        .navbar-dark .navbar-brand {
            font-family: -webkit-pictograph;
            font-size: x-large;
            padding-bottom: 0;
            font-weight: 100
        }
        .navbar-dark .navbar-brand span {
            font-size: 40px;
            color: #ff6a00;
            font-weight: 900;
            line-height: 0
        }
        .navbar-dark .navbar-brand:hover, .navbar-dark .navbar-brand:focus {
            color: #fff !important
        }
        .ftco-navbar-light.scrolled .navbar-brand span {
            color: #ff6a00 !important
        }
        @@media (max-width: 991.98px) {
        .navbar-dark .navbar-brand {
            color: #fff !important ;
            line-height: 0 !important;
            padding:10px;
            font-size:large
        }
        .navbar-dark .navbar-brand:hover, .navbar-dark .navbar-brand:focus {
            color: #fff !important
        }
        .navbar-dark .navbar-brand span {
            font-size: 25px !important;
        }
        .ftco-navbar-light.scrolled .navbar-brand {
            color: #000 !important;
            font-size: large !important;
            padding: 10px;
            line-height:0
        }
        .ftco-navbar-light.scrolled .navbar-brand span {
            color: #ff6a00 !important
        }
            }
    </style>

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="/home">
                <span>T</span>urismo
            </a>
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a href="/home" class="nav-link">Home</a></li>
                    <li class="nav-item"><a asp-action="PlaceView" asp-controller="Place" class="nav-link">Places</a></li>
                    <li class="nav-item"><a asp-action="HotelView" asp-controller="Hotel" class="nav-link">Hotels</a></li>
                    <li class="nav-item"><a asp-action="RestaurantView" asp-controller="Restaurant" class="nav-link">Restaurants</a></li>
                    @if (!string.IsNullOrEmpty(GradProj.Controllers.AccountController.adminmsg))
                    {
                        <li class="nav-item"><a asp-action="home" asp-controller="admin" class="nav-link">Admin Panel</a></li>
                    }
                    <li class="nav-item"><a asp-action="FestivalView" asp-controller="Festival" class="nav-link">Festivals</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user-circle" style="font-size:25px;"></i>
                            @if (!string.IsNullOrEmpty(GradProj.Controllers.AccountController.LoggerName) && !string.IsNullOrEmpty(GradProj.Controllers.AccountController.message))
                            {<string>@GradProj.Controllers.AccountController.LoggerName</string>}
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (string.IsNullOrEmpty(GradProj.Controllers.AccountController.message))
                            {
                                <a class="dropdown-item" href="~/account/register">Register</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="~/account/Login">Login</a>
                            }
                            else
                            {
                                <a class="dropdown-item" href="~/account/logout">Logout</a>
                            }
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- END nav -->
    @RenderBody()
    @if (string.IsNullOrEmpty(GradProj.Controllers.AccountController.message))
    {
        <section class="ftco-section-parallax">
            <div class="parallax-img d-flex align-items-center">
                <div class="container">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
                            <h2>Subcribe to our Newsletter</h2>
                            <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in</p>
                            <div class="row d-flex justify-content-center mt-5">
                                <div class="col-md-8">
                                    <form class="subscribe-form">
                                        <div class="form-group d-flex">
                                            <input type="text" class="form-control" placeholder="Enter email address">
                                            <a href="~/account/login" class="submit px-3">Subscribe</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

        <footer class="ftco-footer ftco-bg-dark ftco-section">
